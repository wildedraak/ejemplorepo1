@model MiParcialito.Models.MateriumTemp

@{
    ViewData["Title"] = "CrearMateriaEstudiante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CrearMateriaEstudiante</h1>

<h4>Materium</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearMateriaEstudiante">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MateriaId" class="control-label"></label>
                <select asp-for="MateriaId" class="form-control">
                    <option value="">Seleccione un rol...</option>
                    @foreach (var m in ViewData["Materia"] as List<Materium>)
                    {
                        <option value="@m.Id">@m.MateriaNombre</option>
                    }
                </select>
                
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
